#############
# 服务管理
#############
#!/bin/sh

APP=ipservice
EXEC=/usr/local/bin/ipservice
CONF=/etc/ipservice/config.yaml
PIDFILE=/var/tmp/ipservice.pid

function start()
{
    check_pid
    running=$?
    if [ $running -gt 0 ];then
        echo -n "$APP now is running already, pid="
        cat $PIDFILE
        return 1
    fi

    nohup $EXEC -c $CONF &
    echo $! > $PIDFILE
    echo "$APP started..., pid=$!" 
}

function stop()
{
    pid=`cat $PIDFILE`
    kill $pid
    echo "$APP stoped..."
}

function restart() {
    stop
    start
}

function check_pid() {
    if [ -f $PIDFILE ];then
        pid=`cat $PIDFILE`
        if [ -n $pid ]; then
            running=`ps -p $pid|grep -v "PID TTY" |wc -l`
            return $running
        fi
    fi
    return 0
}

function build() {
    go build
    if [ $? -ne 0 ]; then
        exit $?
    fi
}

function status() {
    check_pid
    running=$?
    if [ $running -gt 0 ];then
        echo -n "$APP now is running, pid="
        cat $PIDFILE
    else
        echo "$APP is stoped"
    fi
}

case "$1" in
  status)
    status
    ;;
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart|reload|force-reload)
    restart
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|build|status}"
esac


